                    </GridView>

                </ListView.View>
            </ListView>
                <Button Content="Выгрузить историю" HorizontalAlignment="Left" Margin="105,17,0,0" VerticalAlignment="Top" Width="175" Click="Button_Click1"/>
                <Button Content="Загрузить историю" HorizontalAlignment="Left" Margin="500,17,0,0" VerticalAlignment="Top" Width="175" />
            </Grid>
        </TabItem>
       

    </TabControl>

</Window>
