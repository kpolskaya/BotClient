<Window x:Class="BotClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotClient"
        mc:Ignorable="d"
        Closing="DataWindow_Closing"
        
        
        Title= "TelegramBotClient" Height="450" Width="800">
    <TabControl HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch" >

        <TabItem Header="Телеграм бот">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition />
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           Height="auto">
                    <Menu DockPanel.Dock ="Left" Height="auto" >
                        <MenuItem Header="File" />
                        <MenuItem Header="More..." />
                    </Menu>
                </DockPanel>
                <StatusBar Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Height="20">
            
                </StatusBar>
                <Label Grid.Row="1" Grid.Column="0" Content="Список пользователей" 
                       Background="Black" Foreground="LightGray" 
                       FontWeight="DemiBold" FontSize="16" />
                <ListBox Name="Contacts" Grid.Row="2" Grid.RowSpan="2" Grid.Column="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0">
                                <TextBlock Text="{Binding FirstName}" Margin="2" FontSize="14" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ListBox Name="Messages" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Blue" Margin="2" BorderThickness="1" CornerRadius="5">
                                <WrapPanel Margin="10">
                                    <TextBlock Text="{Binding FirstName}" Margin="3" FontSize="14"/>
                                    <TextBlock Text="{Binding StringFormat=sent {0}, Path=Type}" Margin="3" FontSize="14"/>
                                    <TextBlock Text="{Binding Text}" Margin="3" FontSize="14" FontWeight="DemiBold" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Time}" Margin="3" FontSize="14" Foreground="Gray"/>
                                </WrapPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Grid.Row="3" Grid.Column="1" 
                        Name="StartBot" 
                        Height="25" Content="Старт" 
                        FontSize="16" 
                        FontWeight="DemiBold" 
                        ToolTipService.ToolTip="Кликните для запуска бота"
                        Click="StartBot_Click"/>

            </Grid>
        </TabItem>
        <TabItem Header="Полученные файлы">
            <Grid>

                <Grid.RowDefinitions>

                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="90*"/>
                </Grid.RowDefinitions>
            <ListView x:Name ="listViewF" Grid.Row="2" Grid.ColumnSpan="5"  HorizontalAlignment="Left" Height="270" Width="765"   >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Дата" Width="120" DisplayMemberBinding="{Binding Path = DTmes}"/>
                        <GridViewColumn Header="Тип файла" Width="80" DisplayMemberBinding="{Binding Path = FileType}"/>
                        <GridViewColumn Header="Путь к файлу" Width="410" DisplayMemberBinding="{Binding Path = FilePath}"/>
                        <GridViewColumn Header="Отправитель" Width="80" DisplayMemberBinding="{Binding Path = ChatFirstN}"/>
                        <GridViewColumn Header="Записан" Width="70" DisplayMemberBinding="{Binding Path = IsDownloaded}"/>

