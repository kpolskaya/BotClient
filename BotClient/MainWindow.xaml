<Window x:Class="BotClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotClient"
        mc:Ignorable="d"
        
        
        Title= "TelegramBotClient" Height="450" Width="800">
    <TabControl HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch">

        <TabItem Header="Телеграм бот">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition />
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           Height="auto">
                    <Menu DockPanel.Dock ="Left" Height="auto" >
                        <MenuItem Header="File" />
                        <MenuItem Header="More..." />
                    </Menu>
                </DockPanel>
                <StatusBar Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Height="20">
            
                </StatusBar>
                <Label Grid.Row="1" Grid.Column="0" Content="Список пользователей" 
                       Background="Black" Foreground="LightGray" 
                       FontWeight="DemiBold" FontSize="16" />
                <ListBox Name="Contacts" Grid.Row="2" Grid.RowSpan="2" Grid.Column="0">
            
                </ListBox>
                <ListBox Name="Messages" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1">
            
                </ListBox>
                <Button Grid.Row="3" Grid.Column="1" Name="StartBot" Height="25" Content="Старт" FontSize="16" FontWeight="DemiBold" />

            </Grid>
        </TabItem>
        <TabItem Header="Полученные файлы">

            <ListView x:Name ="listViewF" Grid.Row="2" Grid.ColumnSpan="5"  HorizontalAlignment="Left" Height="270" Width="765"   >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Дата" Width="130" />
                        <GridViewColumn Header="Тип файла" Width="130" DisplayMemberBinding="{Binding Path = FileType}"/>
                        <GridViewColumn Header="Путь к файлу" Width="430" DisplayMemberBinding="{Binding Path = FilePath}"/>
                        

